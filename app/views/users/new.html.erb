<h1>Sign Up</h1>

<%= form_for(@user) do |f| %>
  <br><label>name: </label><br>
  <%= f.text_field :name %><br>

  <br><label>User height: </label><br>
<%= f.number_field :height %>

 <br><label>User happiness: </label><br>
<%= f.number_field :happiness %>

<br><label>User nausea: </label><br>
<%= f.number_field :nausea %>

<br><label>User tickets: </label><br>
<%= f.number_field :tickets %>

<br><label>User password: </label><br>
<%= f.password_field :password %>

<br><label>Admin: </label><br>
<%= f.check_box :admin, options = { :class => "user_admin" } %>

  <br><%= f.submit "Create User" %>
<% end %>